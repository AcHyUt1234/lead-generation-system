cat > .env.example << 'EOF'
# Lead Generation System - Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx...
LEAP_API_KEY=your_leap_api_key_here
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUNTER_API_KEY=your_hunter_api_key_here  # Optional: for email verification

# Proxy Configuration (if using)
STEPSTONE_PROXY_URL=http://username:password@proxy.provider.com:port
LINKEDIN_PROXY_URL=http://username:password@proxy.provider.com:port

# Database (if using PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/leadgen

# Redis (if using for caching)
REDIS_URL=redis://localhost:6379/0

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development  # development, staging, production
MIN_PAIN_SCORE=60
MIN_CONTACTS_PER_COMPANY=3

# Scraping Settings
MAX_JOBS_PER_RUN=200
SCRAPING_DELAY_SECONDS=2
USE_BATCH_PROCESSING=true

# Model Selection
CLAUDE_DEFAULT_MODEL=claude-3-5-haiku-20241022
CLAUDE_HIGH_QUALITY_MODEL=claude-3-5-sonnet-20241022
PAIN_SCORE_THRESHOLD_FOR_SONNET=80
EOF